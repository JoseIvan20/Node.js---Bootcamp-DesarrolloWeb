extends ../layout/index

block contenido 
    div(class="py-10")
        h1(class="text-4xl my-10 font-bold text-center") Bienes
            span(class="font-normal") &nbsp;Raíces
        h2(class="text-center text-2xl font-bold")= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each  error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-md")=error.msg 

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white max-w-md shadow-md py-8 px-4")
                form(action="/auth/registro" method="POST" class="space-y-5" noValidate) 
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="nombre") Tú Nombre 
                        input(id="nombre" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" placeholder="Tú Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email de Registro
                        input(id="email" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" placeholder="example@code.com" type="email" name="email" value= usuario ? usuario.email : '')
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Password
                        input(id="password" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" placeholder="Tú Password" type="password" name="password")
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repetir_password") Password
                        input(id="repetir_password" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" placeholder="Repite tú Password" type="password" name="repetir_password")

                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-slate-500 text-xs") ¿Ya tienes cuenta? Inicia Sesión 
                        a(href="/auth/olvide-password" class="text-slate-500 font-semibold text-xs") Olvide mi Password 

                    div(class="flex justify-center")
                        input(type="submit" value="Crear Cuenta" class="block w-44 text-base font-semibold rounded-full hover:bg-slate-500 hover:duration-300 text-white py-3 px-3 bg-slate-400")
    
