div(class="bg-white shadow rounded-lg")
    img(src=`/uploads/${propiedad.imagen}` alt=`Imagen propiedad ${propiedad.titulo}` class="object-cover h-72 w-full")
    div(class="p-5 space-y-5")
        h3(class="text-2xl font-bold text-slate-500")= propiedad.titulo
        p(class="text-sm text-slate-500") Habitaciones: 
            span(class="text-slate-800 font-bold")= propiedad.habitaciones
        p(class="text-sm text-slate-500") WC: 
            span(class="text-slate-800 font-bold")= propiedad.wc
        p(class="text-sm text-slate-500") Precio: 
            span(class="text-slate-800 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-slate-200 text-slate-700 text-center block font-bold p-2 uppercase rounded-md duration-300 hover:bg-slate-300 hover:shadow") Ver Propiedad