extends ../layout/admin

//- Estilos para los mapas
block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") &nbsp;Raíces
        h2(class="text-center text-2xl font-extrabold")= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each  error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-md")=error.msg 

    div(class="bg-white shadow-xl py-8 px-4 rounded-sm mx-auto max-w-4xl my-10 md:px-10")
        form( method="POST" class="space-y-2") 
            input(type="hidden" name="_csrf" value=csrfToken)
            div(class="space-y-8")
                h3(class="text-2xl leading-6 font-bold text-slate-700") Información General
                p(class="text-slate-600 font-semibold") Añade información sobre la propiedad en venta

                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="titulo") Titulo del Anuncio
                    input(id="titulo" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" placeholder="Titulo de la Propiedad: ej. Casa con Playa" type="text" name="titulo" value= datos.titulo ? datos.titulo : '') 

                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="descripcion") Descripción del Anuncio
                    textarea(id="descripcion" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" name="descripcion")= datos.descripcion ? datos.descripcion : ''

                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                    div(class="md:w-1/2")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="categoria") Categoria
                        select(id="categoria" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" name="categoria") 
                            option(value="") - Categoria 
                            each categoria in categorias 
                                option(value=categoria.id selected= datos.categoriaId ? datos.categoriaId == categoria.id ? true : false : null )= categoria.nombre  
                            
                    div(class="md:w-1/2")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="precio") Precio
                        select(id="precio" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" name="precio") 
                            option(value="") - Precio
                            each precio in precios 
                                option(value=precio.id selected= datos.precioId ? datos.precioId == precio.id ? true : false : null )= precio.nombre 

                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                    div(class="md:w-1/3")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="habitaciones") No. Habitaciones
                        select(id="habitaciones" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" name="habitaciones") 
                            option(value="") - No. Habitaciones
                            - var n = 1; // - Cuando le ponemos un -, le estamos diciendo que lo trate como código JavaScript
                                while n < 5
                                    option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null ) #{ n++ }
                            
                    div(class="md:w-1/3")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="estacionamiento") Estacionamiento
                        select(id="estacionamiento" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" name="estacionamiento") 
                            option(value="") - No. Estacionamiento
                            - var n = 1;
                                while n < 5
                                    option(value=n selected= datos.estacionamiento ? datos.estacionamiento == n ? true : false : null ) #{ n++ } 

                    div(class="md:w-1/3")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="wc") Baños
                        select(id="wc" class="w-full px-3 py-2 border-2 border-gray-400 rounded-md duration-300 placeholder:text-gray-400 outline-none focus:ring focus:ring-gray-400" name="wc") 
                            option(value="") - No. Baños
                            - var n = 1;
                                while n < 5
                                    option(value=n selected= datos.wc ? datos.wc == n ? true : false : null ) #{ n++ } 
                div(class="border-gray-300 border-t py-5 space-y-8")
                    h3(class="text-lg leading-6 font-bold text-slate-600") Ubicación
                    p(class="text-gray-600") Ubica la propiedad en el mapa.
                    //- Muestra del mapa 
                    #mapa(class="h-96")

                    //- Estilos de la captura de la calle 
                    div(class="")
                        p.calle= datos.calle ? datos.calle : ''
                    input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '')
                    input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '')
                    input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '')

                div(class="flex justify-center")
                    input(type="submit" class="duration-200 bg-slate-600 hover:bg-slate-800 hover:shadow-md rounded-md text-white font-bold cursor-pointer py-3 px-7" value="Guardar Cambios")

//- scripts de ubicación en Maps 
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js") 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11") 
