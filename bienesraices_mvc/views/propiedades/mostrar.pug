extends ../layout/mostrarPropiedad

//- Estilos para los mapas
block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 

    //- pre= JSON.stringify(propiedad, undefined, 1)
    div(class="py-5")
        h1(id="titulo" class="text-4xl my-10 font-extrabold text-center")=propiedad.titulo
        
        div
            a(href="#" class="font-bold text-slate-700 text-xl") Categoria: 
                span(class="font-medium text-base text-slate-500 bg-stone-100 rounded-sm p-1")= propiedad.categoria.nombre

        div(class="mt-5 md:flex gap-4")
            div(class="md:w-2/3 bg-slate-50 shadow-md rounded-md") 
                img(src=`/uploads/${propiedad.imagen}`, alt=`Imagen de la propiedad ${propiedad.titulo}`)

                div(class="px-5 py-10 space-y-5")
                    p(class="text-xl font-semibold text-slate-600 bg-slate-200 rounded shadow p-2 text-center ")= propiedad.descripcion
                    h2(class="text-xl leading-6 font-bold text-slate-700") Informaci贸n de Propiedad

                    div(class="grid grid-cols-1 md:grid-cols-2 gap-2")
                        p(class="text-slate-500 text-sm") WC
                            span(class="text-slate-600 block text-lg")= propiedad.wc

                        p(class="text-slate-500 text-sm") Habitaciones
                            span(class="text-slate-600 block text-lg")= propiedad.habitaciones

                        p(class="text-slate-500 text-sm") Estacionamiento
                            span(class="text-slate-600 block text-lg")= propiedad.estacionamiento

                        p(class="text-slate-500 text-sm") Precio
                            span(class="text-slate-600 block text-lg")= propiedad.precio.nombre

            div(class="md:w-1/3 ")
                h3(class="text-center py-10 leading-10 text-2xl font-bold text-slate-500") Ubicaci贸n 
                div(class="h-96" id="mapa")
                    p(id="lat" class="hidden")= propiedad.lat
                    p(id="lng" class="hidden")= propiedad.lng

                div(class="p-5")
                    p(class="text-slate-700 font-medium text-base") Direcci贸n
                        span(id="calle" class="text-slate-500 block text-lg bg-slate-100 rounded shadow p-1")= propiedad.calle

//- scripts de ubicaci贸n en Maps 
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mostrarMapa.js") 